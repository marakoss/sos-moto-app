{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"esModuleInterop": true,
		"jsx": "react",
		"strict": true,
		"baseUrl": "./src",
		"paths": {
			"@src/*": ["./*"],
			"@assets/*": ["assets/*"],
			"@images/*": ["assets/images/*"],
			"@icons/*": ["assets/icons/*"],
			"@components/*": ["components/*"],
			"@dictionaries/*": ["dictionaries/*"],
			"@screens/*": ["screens/*"],
			"@store/*": ["store/*"],
			"@translations/*": ["translations/*"],
			"@types/*": ["types/*"],
			"@utils/*": ["utils/*"],
			"@logic/*": ["logic/*"],
			"@hooks/*": ["hooks/*"]
		},
		"noImplicitAny": true,
		"strictNullChecks": true
	},
	"exclude": ["__tests__/**/*-test.ts"]
}
